<%= form_for @booking, url: { action: "create" }, html: { class: "nifty_form" } do |f| %>
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<%= hidden_field_tag :flight_id, @flight_id %>

	<%= f.fields_for :passengers do |p| %>
		<%= p.label :firstname %>
		<%= p.text_field :firstname, class: 'form-control' %>

		<%= p.label :lastname %>
		<%= p.text_field :lastname, class: 'form-control' %>

		<%= p.label :email %>
		<%= p.email_field :email, class: 'form-control' %>
	<% end %>
	<%= f.submit "Create" %>
<% end %>